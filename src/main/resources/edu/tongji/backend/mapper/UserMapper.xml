<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.tongji.backend.mapper.UserMapper">
    <select id="selectById" resultType="edu.tongji.backend.entity.user">
        SELECT * FROM user WHERE user_id = #{id}
    </select>
</mapper>
